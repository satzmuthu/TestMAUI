<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestTheme.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <BoxView Style="{StaticResource PrimaryBoxView}"
                     />
            <BoxView Style="{StaticResource SecondaryBoxView}" />
            <BoxView Style="{StaticResource TertiaryBoxView}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
